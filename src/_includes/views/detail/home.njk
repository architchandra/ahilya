---
layout: layouts/base
---



{% set homeCollectionHandle = 'blog' %}
{% set homeEntries = collections[homeCollectionHandle]|reverse %}



<article>
  <section class="container prose my-8 text-center">
    {% if heading %}
      <h2 class="title-home mb-4">
        {{ heading }}
      </h2>
    {% endif %}

    {% if intro %}
      <p class="font-title">
        {{ intro }}
      </p>
    {% endif %}
  </section>

  {% if homeEntries|length %}
    {% set homeEntriesFirst = homeEntries|first %}
    {% set homeEntriesPluralName = homeEntriesFirst.data.pluralName %}

    <section class="container max-w-prose my-20 sm:my-24">
      <h2 class="title-h2 mb-8 text-center">
        Latest {{ homeEntriesPluralName }}
      </h2>

      {% set listerParams = {
        entries: homeEntries,
        class: 'mb-8',
        limit: 5
      } %}
      {% include 'components/lister.njk' %}

      <a class="inline-block pr-7h title-h4 uppercase icon icon-arrow-right bg-almost-right-top bg-h-5 hover:bg-right-top transition-all duration-300" href="/blog">
        All {{ homeEntriesPluralName }}
      </a>
    </section>
  {% endif %}
</article>